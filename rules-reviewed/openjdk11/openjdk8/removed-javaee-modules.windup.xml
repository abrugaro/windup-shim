removed-javaee-modules:
  metadata:
    description: This ruleset provides analysis with respect to modules removed between
      OpenJDK 8 and 11.
    sourceTechnologies:
    - id: openjdk
      versionRange: (,8]
    tags: []
    targetTechnologies:
    - id: openjdk
      versionRange: '[11,)'
  original-file: https://github.com/windup/windup-rulesets/tree/master/rules-reviewed/openjdk11/openjdk8/removed-javaee-modules.windup.xml
  rules:
    removed-javaee-modules-00000:
      perform:
        hint:
          category-id: mandatory
          effort: '1'
          links:
          - href: https://www.oracle.com/java/technologies/javase/11-relnote-issues.html#JDK-8190378
            title: Removed Java EE modules
          message: "Add the `jakarta.activation` dependency to your application's\
            \ `pom.xml`.\n\n                        `<groupId>jakarta.activation</groupId>`\n\
            \n                        `<artifactId>jakarta.activation</artifactId>`"
          tags: []
          title: The java.activation (JAF) module has been removed from OpenJDK 11
      when:
        annotation-types: []
        javaclass:
          references: javax.activation{*}
        location: IMPORT
      where: {}
    removed-javaee-modules-00010:
      perform:
        hint:
          category-id: mandatory
          effort: '1'
          links:
          - href: https://javaee.github.io/glassfish-corba/index.html
            title: GlassFish implementation of CORBA and RMI-IIOP
          - href: https://www.oracle.com/java/technologies/javase/11-relnote-issues.html#JDK-8190378
            title: Removed Java EE modules
          message: "The `java.corba` (CORBA) module has been removed from OpenJDK\
            \ 11.  \n                        If you wish to continue using CORBA within\
            \ your application consider using the GlassFish implementation of CORBA\
            \ and RMI-IIOP."
          tags: []
          title: The java.corba module has been removed from OpenJDK 11
      when:
        or:
        - annotation-types: []
          javaclass:
            references: javax.activity.{*}
          location: IMPORT
        - annotation-types: []
          javaclass:
            references: javax.rmi.{*}
          location: IMPORT
        - annotation-types: []
          javaclass:
            references: com.sun.corba.{*}
          location: IMPORT
      where: {}
    removed-javaee-modules-00020:
      perform:
        hint:
          category-id: mandatory
          effort: '1'
          links:
          - href: https://www.oracle.com/java/technologies/javase/11-relnote-issues.html#JDK-8190378
            title: Removed Java EE modules
          message: "Add the `jakarta.annotation` dependency to your application's\
            \ `pom.xml`.\n\n                        `<groupId>jakarta.annotation</groupId>`\n\
            \n                        `<artifactId>jakarta.annotation-api</artifactId>`"
          tags: []
          title: The java.annotation (Common Annotations) module has been removed
            from OpenJDK 11
      when:
        annotation-types: []
        javaclass:
          references: javax.annotation{*}
        location: IMPORT
      where: {}
