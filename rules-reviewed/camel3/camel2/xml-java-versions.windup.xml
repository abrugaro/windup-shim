xml-java-versions:
  metadata:
    description: This ruleset provides analysis with respect to the missing dependencies
      in Apache Camel 3 due to Java 11 adoption.
    sourceTechnologies:
    - id: camel
      versionRange: '[2,3)'
    tags: []
    targetTechnologies:
    - id: camel
      versionRange: '[3,)'
  original-file: https://github.com/windup/windup-rulesets/tree/master/rules-reviewed/camel3/camel2/xml-java-versions.windup.xml
  rules:
    xml-java-versions-00001:
      perform:
        hint:
          category-id: potential
          effort: '1'
          links:
          - href: https://camel.apache.org/manual/latest/camel-3-migration-guide.html#_java_versions
            title: 'Camel 3 - Migration Guide: Java Versions'
          message: "`jaxb-api` Maven dependency missing.\n\n                     \
            \   Apache Camel 3 supports Java 11 and in this Java version JAXB modules\
            \ have been removed from the JDK, therefore you will need to add them\
            \ as Maven dependencies since there are couple of components rely on them:\n\
            \n                        ```Xml\n                        <dependency>\n\
            \                            <groupId>javax.xml.bind</groupId>\n     \
            \                       <artifactId>jaxb-api</artifactId>\n          \
            \                  <version>2.3.1</version>\n                        </dependency>\n\
            \                        ```"
          tags: []
          title: '''jaxb-api'' Maven dependency missing'
      when:
        artifact:
          artifactId: jaxb-api
          fromVersion: null
          groupId: javax.xml.bind
          toVersion: null
        xmlfile:
          as: dependencies-block
          in: pom.xml
          matches: /m:project/m:dependencies
          namespace:
            prefix: m
            uri: http://maven.apache.org/POM/4.0.0
      where: {}
    xml-java-versions-00002:
      perform:
        hint:
          category-id: potential
          effort: '1'
          links:
          - href: https://camel.apache.org/manual/latest/camel-3-migration-guide.html#_java_versions
            title: 'Camel 3 - Migration Guide: Java Versions'
          message: "`jaxb-core` Maven dependency missing.\n\n                    \
            \    Apache Camel 3 supports Java 11 and in this Java version JAXB modules\
            \ have been removed from the JDK, therefore you will need to add them\
            \ as Maven dependencies since there are couple of components rely on them:\n\
            \n                        ```Xml\n                        <dependency>\n\
            \                            <groupId>com.sun.xml.bind</groupId>\n   \
            \                         <artifactId>jaxb-core</artifactId>\n       \
            \                     <version>2.3.0.1</version>\n                   \
            \     </dependency>\n                        ```"
          tags: []
          title: '''jaxb-core'' Maven dependency missing'
      when:
        artifact:
          artifactId: jaxb-core
          fromVersion: null
          groupId: com.sun.xml.bind
          toVersion: null
        xmlfile:
          as: dependencies-block
          in: pom.xml
          matches: /m:project/m:dependencies
          namespace:
            prefix: m
            uri: http://maven.apache.org/POM/4.0.0
      where: {}
    xml-java-versions-00003:
      perform:
        hint:
          category-id: potential
          effort: '1'
          links:
          - href: https://camel.apache.org/manual/latest/camel-3-migration-guide.html#_java_versions
            title: 'Camel 3 - Migration Guide: Java Versions'
          message: "`jaxb-impl` Maven dependency missing.\n\n                    \
            \    Apache Camel 3 supports Java 11 and in this Java version JAXB modules\
            \ have been removed from the JDK, therefore you will need to add them\
            \ as Maven dependencies since there are couple of components rely on them:\n\
            \n                        ```Xml\n                        <dependency>\n\
            \                            <groupId>com.sun.xml.bind</groupId>\n   \
            \                         <artifactId>jaxb-impl</artifactId>\n       \
            \                     <version>2.3.2</version>\n                     \
            \   </dependency>\n                        ```"
          tags: []
          title: '''jaxb-impl'' Maven dependency missing'
      when:
        artifact:
          artifactId: jaxb-impl
          fromVersion: null
          groupId: com.sun.xml.bind
          toVersion: null
        xmlfile:
          as: dependencies-block
          in: pom.xml
          matches: /m:project/m:dependencies
          namespace:
            prefix: m
            uri: http://maven.apache.org/POM/4.0.0
      where: {}
